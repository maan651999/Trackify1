@model IEnumerable<Trackify.Domain.FitnessEntity.Progress>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Progress";
}
<div class="d-flex justify-content-between align-items-center mb-2">
    <h1 class="budget-title">
        Progress
    </h1>
    <a class="btn btn-primary" href="/Progress/Add">Add Log</a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr><th>Date</th><th>Weight (kg)</th><th>Waist (cm)</th><th>Body Fat %</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Date.ToString("dd MMM yyyy")</td>
                <td>@p.Weight</td>
                <td>@p.Waist</td>
                <td>@p.BodyFat</td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-custom {
        padding: 8px 16px;
        font-size: 14px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border-radius: 5px;
        line-height: 1.2;
    }

        .btn-custom i {
            font-size: 16px;
        }

        /* Hover effect */
        .btn-custom:hover {
            opacity: 0.9;
            transform: translateY(-1px);
            transition: all 0.2s ease;
        }

    .p-4 {
        padding: 2rem !important;
    }
</style>