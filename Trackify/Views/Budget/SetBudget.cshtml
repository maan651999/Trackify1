@model Trackify.Application.DTOs.BudgetFormDto

<style>
    .mt-5 {
        margin-top: 3rem !important;
        margin-left: 16rem !important;
    }
</style>

<div class="container mt-5">
    <div class="card p-4 shadow rounded-4">
        <h2 class="text-center text-primary">
            💰 Set monthly Budget (@DateTime.Now.ToString("MMMM yyyy"))
        </h2>

        <form method="post" asp-action="SetBudget">
            @Html.AntiForgeryToken()

           @*  <input type="hidden" asp-for="UserId" value="1" /> *@

            @* <div class="mb-3">
                <label asp-for="Year" class="form-label"></label>
                <input asp-for="Year" class="form-control" readonly />                                                                 
            </div>

            <div class="mb-3">
                <label asp-for="Month" class="form-label"></label>
                <input asp-for="Month" class="form-control" readonly />
            </div> *@

            <div class="mb-3">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">💾 Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        @if (TempData["ErrorMessage"] != null)
            {
                        <text>
                            Swal.fire({
                                icon: 'error',
                                title: 'viewing recommendations Failed',
                                text: '@TempData["ErrorMessage"]',
                                timer: 3000,
                                timerProgressBar: true,
                                showConfirmButton: false
                            });
                        </text>
            }
    </script>
}
