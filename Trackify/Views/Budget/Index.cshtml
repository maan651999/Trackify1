@model List<Trackify.Application.DTOs.BudgetCategoryDto>

<style>
    .btn-premium {
        background: linear-gradient(135deg, #005298, #28787A, #3B8A6D, #53A05C);
        color: #fff !important;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 50px; /* pill shape */
        border: none;
        box-shadow: 0 4px 12px rgba(0, 82, 152, 0.35);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background-size: 300% 300%;
        animation: gradientShift 8s ease infinite;
    }

        .btn-premium:hover {
            background: linear-gradient(135deg, #28787A, #3B8A6D, #53A05C, #005298);
            box-shadow: 0 6px 16px rgba(40, 120, 122, 0.45);
            transform: translateY(-2px);
        }

        .btn-premium:active {
            transform: translateY(1px);
            box-shadow: 0 2px 8px rgba(40, 120, 122, 0.4);
        }

    .btn-danger-premium {
        background: linear-gradient(135deg, #d62828, #e63946, #f2545b, #ff6b6b);
        color: #fff !important;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 50px; /* pill shape */
        border: none;
        box-shadow: 0 4px 12px rgba(214, 40, 40, 0.35);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background-size: 300% 300%;
        animation: gradientShift 8s ease infinite;
    }

        .btn-danger-premium:hover {
            background: linear-gradient(135deg, #e63946, #f2545b, #ff6b6b, #c1121f);
            box-shadow: 0 6px 16px rgba(230, 57, 70, 0.45);
            transform: translateY(-2px);
        }

        .btn-danger-premium:active {
            transform: translateY(1px);
            box-shadow: 0 2px 8px rgba(230, 57, 70, 0.4);
        }

    .btn-custom {
        padding: 8px 16px;
        font-size: 14px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border-radius: 5px;
        line-height: 1.2;
    }

        .btn-custom i {
            font-size: 16px;
        }

        /* Hover effect */
        .btn-custom:hover {
            opacity: 0.9;
            transform: translateY(-1px);
            transition: all 0.2s ease;
        }

    .p-4 {
        padding: 1rem 2rem 2rem 2rem !important;
    }

    .mt-6 {
        padding: 0;
        margin: 0;
    }
</style>

<h1 class="budget-title">
    📊 Budget Categories
</h1>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Category</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        string category = item.CategoryName;
                        if (!string.IsNullOrEmpty(category) && category.StartsWith("*"))
                        {
                            <span style="color: red; font-weight: 900;">*</span>
                            @category.Substring(1).TrimStart()
                            // baaki ka naam normal dikhe
                        }
                        else
                        {
                            @category
                        }
                    }
                </td>
                <td>₹@item.BudgetAmount</td>
                <td>
                    <a class="btn-premium btn-sm"
                       asp-controller="Budget"
                       asp-action="Edit"
                       asp-route-id="@item.CategoryId">
                        Edit
                    </a>
                    <a class="btn-danger-premium btn-sm"
                       asp-controller="Budget"
                       asp-action="Delete"
                       asp-route-id="@item.CategoryId" onclick="return confirm('Delete this category?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        @if (TempData["SuccessMessage"] != null)
            {
                            <text>
                                Swal.fire({
                                            icon: 'success',
                                    title: 'Success',
                                        text: '@TempData["SuccessMessage"]',
                                    timer: 3000,
                                    timerProgressBar: true,
                                    showConfirmButton: false
                                });
                            </text>
            }
            else if (TempData["ErrorMessage"] != null)
            {
                                <text>
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Failed',
                                        text: '@TempData["ErrorMessage"]',
                                        timer: 3000,
                                        timerProgressBar: true,
                                        showConfirmButton: false
                                    });
                                </text>
            }
    </script>
}

