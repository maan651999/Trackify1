@model Trackify.Application.DTOs.BudgetCategoryDto

<style>
    .p-4 {
        padding: 1rem 2rem 2rem 2rem !important;
    }

    .mt-6 {
        padding: 0;
        margin: 0;
    }

    .btn-premium {
        background: linear-gradient(135deg, #005298, #28787A, #3B8A6D, #53A05C);
        color: #fff !important;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 50px; /* pill shape */
        border: none;
        box-shadow: 0 4px 12px rgba(0, 82, 152, 0.35);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background-size: 300% 300%;
        animation: gradientShift 8s ease infinite;
    }

        .btn-premium:hover {
            background: linear-gradient(135deg, #28787A, #3B8A6D, #53A05C, #005298);
            box-shadow: 0 6px 16px rgba(40, 120, 122, 0.45);
            transform: translateY(-2px);
        }

        .btn-premium:active {
            transform: translateY(1px);
            box-shadow: 0 2px 8px rgba(40, 120, 122, 0.4);
        }
</style>

<h1 class="budget-title">
    📊 Edit Budget Category
</h1>
<form method="post">
    <input type="hidden" asp-for="CategoryId" />
    <div class="mb-3">
        <label>Category Name</label>
        <input asp-for="CategoryName" class="form-control" readonly/>
    </div>
    <div class="mb-3">
        <label>Budget Amount</label>
        <input asp-for="BudgetAmount" class="form-control" />
    </div>
    <button type="submit" class="btn-premium btn-sm">Update</button>
</form>
