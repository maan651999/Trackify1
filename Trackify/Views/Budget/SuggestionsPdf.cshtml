@model List<Trackify.Application.DTOs.BudgetSuggestionDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial;
            font-size: 14px;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: white;
        }
    </style>
</head>
<body>
    <h2>Smart Budget Suggestions - Trackify</h2>
    <p>Date: @DateTime.Now.ToString("dd MMM yyyy")</p>
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Current Budget</th>
                <th>3-Month Avg Spent</th>
                <th>Suggested Budget</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Category</td>
                    <td>₹@item.CurrentBudget</td>
                    <td>₹@item.AverageSpent</td>
                    <td>₹@item.SuggestedBudget</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
