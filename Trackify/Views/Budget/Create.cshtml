@model Trackify.Application.DTOs.BudgetCategoryDto

<h1 class="budget-title">
    📊 Add Budget Category
</h1>
<form method="post">
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category Name</label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(ViewBag.CategoryList as List<SelectListItem>)"
                style="pointer-events: none; background-color: #e9ecef;">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Budget Amount</label>
        <input asp-for="BudgetAmount" class="form-control" value="@ViewBag.DefaultBudgetAmount" />
        <span asp-validation-for="BudgetAmount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-premium btn-sm">Save</button>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: '🚫 Invalid Budget Allocation!',
                        html: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ErrorMessage"])),
                        timer: 4000,
                        timerProgressBar: true,
                        showConfirmButton: false,
                        background: '#fff',
                        customClass: {
                            title: 'swal-title-custom',
                            htmlContainer: 'swal-text-custom'
                        }
                    });
                </text>
        }
    </script>
}

<style>
    .btn-premium {
        background: linear-gradient(135deg, #005298, #28787A, #3B8A6D, #53A05C);
        color: #fff !important;
        font-weight: 600;
        padding: 10px 24px;
        border-radius: 50px; /* pill shape */
        border: none;
        box-shadow: 0 4px 12px rgba(0, 82, 152, 0.35);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background-size: 300% 300%;
        animation: gradientShift 8s ease infinite;
    }

        .btn-premium:hover {
            background: linear-gradient(135deg, #28787A, #3B8A6D, #53A05C, #005298);
            box-shadow: 0 6px 16px rgba(40, 120, 122, 0.45);
            transform: translateY(-2px);
        }

        .btn-premium:active {
            transform: translateY(1px);
            box-shadow: 0 2px 8px rgba(40, 120, 122, 0.4);
        }
    .p-4 {
        padding: 2rem !important;
    }
    /* Title ko premium look */
    .swal-title-custom {
        font-size: 1.5rem !important;
        font-weight: 700 !important;
        color: #d9534f !important;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
    }

    /* Message ko readable aur modern */
    .swal-text-custom {
        font-size: 1.1rem !important;
        font-weight: 500 !important;
        color: #333 !important;
        line-height: 1.5;
    }

    .p-4 {
        padding: 1rem 2rem 2rem 2rem !important;
    }

    .mt-6 {
        padding: 0;
        margin: 0;
    }
</style>

