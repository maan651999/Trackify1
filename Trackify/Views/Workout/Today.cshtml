@model Trackify.Domain.FitnessEntity.Workout
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Today's Workout";
}
@if (Model == null)
{
    <p>No workout scheduled for today.</p>
}
else
{
    <h1 class="budget-title">
        @Model.Focus (@DateTime.UtcNow.DayOfWeek)
    </h1>
    <ul class="list-group">
        @foreach (var ex in Model.Exercises.OrderBy(e => e.Id))
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@ex.Name <small class="text-muted">(@ex.Sets x @ex.Reps)</small></span>
                <form asp-action="Toggle" method="post" class="m-0">
                    <input type="hidden" name="exerciseId" value="@ex.Id" />
                    <button class="btn btn-sm @(ex.Completed ? "btn-success" : "btn-outline-secondary")">@(ex.Completed ? "Done" : "Mark Done")</button>
                </form>
            </li>
        }
    </ul>
}

<style>
    .btn-custom {
        padding: 8px 16px;
        font-size: 14px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border-radius: 5px;
        line-height: 1.2;
    }

        .btn-custom i {
            font-size: 16px;
        }

        /* Hover effect */
        .btn-custom:hover {
            opacity: 0.9;
            transform: translateY(-1px);
            transition: all 0.2s ease;
        }

    .p-4 {
        padding: 2rem !important;
    }
</style>